<%- include ('./partials/header.ejs')%>
<body>
    <%- include ('partials/navBar.ejs')%>
    <div class="container">
        <hr>
        <h1><%= pergunta.title%></h1>
        <p><%=  pergunta.description%></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>resposta:</label>
            <textarea name="corpo" class="form-control"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{%>
           <br>
            <div class="card">
                <div class="card-body">
                    <%= resposta.body %>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs')%>